{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "build/esm",
    "rootDir": ".",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "isolatedModules": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "declarationDir": "build/dts",
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}
